<div class="col-md-4 col-sm-6 col-xs-12">
  <div class="project-box">
    <%= link_to image_tag(project.image_url, alt: project.name, width: '100%', height: '200px'), project_path(project) %>

    <div class="description-box">

      <div class="title">
        <%= link_to project.name, "#" %>
      </div>

      <div class="description">
        <%= link_to project.short_description, "#" %>
      </div>

      <div class="project-bar">
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="<%= project.funding_percentage %>" aria-valuemin="0" aria-valuemax="100" style="width:<%= project.funding_percentage %>">
            <span class="sr-only"><%= project.funding_percentage %> Complete (Success)</span>
          </div>
        </div>
      </div>

      <div class="stats">
        <ul>
          <li><%= project.funding_percentage %> <br> <span class="label">funded</span></li>
          <li><%= project.total_backed_amount %> <br> <span class="lable">pledged</span></li>
          <li><%= project.days_to_go %> <br> <span class="lable">days to go</span></li>
        </ul>
      </div>

    </div>
  </div>
</div>
